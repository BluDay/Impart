<?xml version="1.0" encoding="utf-8"?>
<Page
    mc:Ignorable="d"
    x:Class="Impart.WinUI.UI.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <NavigationView x:Name="NavigationView" PaneDisplayMode="Left">
        <NavigationView.AutoSuggestBox>
            <AutoSuggestBox PlaceholderText="Search for chats, users, or files"/>
        </NavigationView.AutoSuggestBox>

        <NavigationView.Content>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{x:Bind}"/>
        </NavigationView.Content>
    </NavigationView>
</Page>