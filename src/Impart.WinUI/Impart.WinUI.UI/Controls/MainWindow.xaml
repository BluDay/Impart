<?xml version="1.0" encoding="utf-8"?>
<Window mc:Ignorable="d"
        x:Class="Impart.WinUI.Controls.MainWindow"
        x:DefaultBindMode="OneWay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:ctrls="using:Impart.WinUI.UI.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:Impart.WinUI.UI.Views"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Impart">
    <Window.SystemBackdrop>
        <MicaBackdrop Kind="Base"/>
    </Window.SystemBackdrop>
    
    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ctrls:TitleBar x:Name="TitleBar" Icon="{StaticResource AppIconImageSource}" Title="{x:Bind Title}"/>

        <Frame x:Name="ContentFrame" SourcePageType="views:MainPage" Grid.Row="1"/>

        <ContentDialog Grid.RowSpan="2"/>
    </Grid>
</Window>