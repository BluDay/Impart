<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--
    <Color x:Key="BluChatMessageBubbleBackgroundColor">CornFlowerBlue</Color>
    <Color x:Key="BluChatMessageBubbleGreyBackgroundColor">#4B4B4B</Color>
    
    <Color x:Key="BluChatMessageBubbleBorderColor">#5188EB</Color>
    <Color x:Key="BluChatMessageBubbleGreyBorderColor">#404040</Color>
    -->

    <Thickness x:Key="BluChatMessageBubblePadding">10,8</Thickness>

    <!-- Background colors -->
    <StaticResource
        x:Key="BluChatMessageBubbleAccentBackgroundBrush"
        ResourceKey="SystemControlBackgroundAccentBrush"/>

    <StaticResource
        x:Key="BluChatMessageBubbleBackgroundBrush"
        ResourceKey="SystemControlBackgroundBaseLowBrush"/>

    <SolidColorBrush
        x:Key="BluChatMessageBubbleRecipientBackgroundBrush"
        Color="{ThemeResource SystemBaseHighColor}"
        Opacity="0.1"/>

    <!-- Text colors -->
    <StaticResource
        x:Key="BluChatMessageBubbleAccentTextBrush"
        ResourceKey="TextOnAccentFillColorPrimaryBrush"/>
    
    <StaticResource
        x:Key="BluChatMessageBubbleTextBrush"
        ResourceKey="TextFillColorPrimaryBrush"/>
</ResourceDictionary>